		function Unit(id, name, cost, fuel, vision, type, moviment, movType, mainWeapon, mwMinRange, mwMaxRange, Ammo, secWeapon, matchup, imgx, imgy, capturer, cargo, fpt){
			this.id = id;
			this.name = name;
			this.cost = cost;
			this.fuel = fuel;
			this.vision = vision;
			this.type = type;
			this.moviment = moviment;
