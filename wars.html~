			this.name = name;
			this.moveTable = moveTable;
			this.imgx = imgx;
			this.imgy = imgy;
			this.defenceBonus = defenceBonus;
			this.structure = structure;
			this.income = structure ? income : 0;
			this.menu = menu;
			this.repairs = repairs;
			this.height = height;
		}

